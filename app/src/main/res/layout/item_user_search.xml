<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/iv_avatar_search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="goToUserPage"
            />
        <TextView
            android:id="@+id/tv_nick_search"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@id/iv_avatar_search"
            android:layout_toRightOf="@id/iv_avatar_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_desc_user_search"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_alignLeft="@id/tv_nick_search"
            android:layout_below="@id/tv_nick_search"
            android:layout_alignBottom="@id/iv_avatar_search"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
