<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="10dp"
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/iv_avatar_chat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />
        <TextView
            android:text="悟空"
            android:id="@+id/tv_nick_chat"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@id/iv_avatar_chat"
            android:layout_toRightOf="@id/iv_avatar_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_date_chat"
        android:text="昨天 13:56"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/tv_nick_chat"
        android:layout_alignTop="@id/tv_nick_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:visibility="gone"
        android:background="@drawable/shape_unread"
        android:textSize="10sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/iv_avatar_chat"
        android:id="@+id/tv_unread_chat"
        android:layout_width="20dp"
        android:layout_height="20dp" />
        <TextView
            android:id="@+id/tv_msg_chat"
            android:text="[图片]"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_alignLeft="@id/tv_nick_chat"
            android:layout_below="@id/tv_nick_chat"
            android:layout_alignBottom="@id/iv_avatar_chat"
            android:layout_toLeftOf="@id/tv_unread_chat"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
