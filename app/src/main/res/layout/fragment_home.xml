<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.astuetz.PagerSlidingTabStrip
        android:background="@android:color/white"
        app:pstsDividerColor="@color/MainBlue"
        app:pstsIndicatorColor="@color/MainBlue"
        app:pstsIndicatorHeight="5dp"
        app:pstsUnderlineColor="@color/MainBlue"
        app:pstsUnderlineHeight="1dp"
        app:pstsDividerPadding="10dp"
        android:id="@id/tab_fagment_home"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <android.support.v4.view.ViewPager
        android:id="@id/viewpager_fragment_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
