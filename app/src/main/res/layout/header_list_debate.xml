<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:elevation="4dp"
    android:layout_marginBottom="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@id/iv_avatar_pub_debate"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@id/tv_nick_pub_debate"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textColor="@color/LightBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@id/tv_date_debate"
                android:gravity="end"
                android:textSize="16sp"
                android:textColor="@color/LightBlack"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            style="@style/Divider"/>
        <TextView
            android:id="@id/tv_title_debate"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@id/tv_desc_debate"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:textSize="16sp"
            android:textColor="@color/LightBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@id/tv_positive_debate"
            android:textSize="16sp"
            android:textColor="@android:color/holo_red_light"
            android:padding="5dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />
        <ProgressBar
            android:progress="50"
            android:id="@id/pro_positive_debate"
            android:progressDrawable="@drawable/progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="15dp" />
        <TextView
            android:id="@id/tv_positivenum_debate"
            android:textSize="16sp"
            android:textColor="@android:color/holo_red_light"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@id/tv_negative_debate"
            android:textSize="16sp"
            android:textColor="@color/MainBlue"
            android:padding="5dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />
        <ProgressBar
            android:progress="90"
            android:id="@id/pro_negative_debate"
            android:progressDrawable="@drawable/progress_blue"
            android:padding="5dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="15dp" />
        <TextView
            android:text="9%"
            android:id="@id/tv_negativenum_debate"
            android:textSize="16sp"
            android:textColor="@color/MainBlue"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <TextView
            android:gravity="center"
            android:padding="11dp"
            android:textSize="16sp"
            android:textColor="@color/LightBlack"
            android:text="对于这个话题你怎么看？"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:gravity="center_vertical"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@id/bt_positive_debate"
                android:text="应该"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="@drawable/selector_button_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@id/tv_comnum_debate"
                android:padding="10dp"
                android:gravity="center"
                android:text="26条讨论"
                android:textSize="18sp"
                android:textColor="@color/LightBlack"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@id/bt_negative_debate"
                android:text="不应该"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="@drawable/selector_button_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <!--<TextView
            android:background="@color/White"
            android:layout_width="match_parent"
            android:layout_height="15dp" />-->
</LinearLayout>
