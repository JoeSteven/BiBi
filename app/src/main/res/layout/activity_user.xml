<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.joe.bibi.activity.UserActivity">
    <RelativeLayout
        android:background="@color/MainBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.github.siyamed.shapeimageview.CircularImageView
            android:src="@mipmap/icon_userpic_default"
            app:siBorderWidth="2dp"
            app:siBorderColor="@color/White"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:id="@id/iv_avatar_user"
            />
        <TextView
            android:id="@id/tv_nick_user"
            android:layout_below="@id/iv_avatar_user"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@id/tv_desc_user"
            android:layout_below="@id/tv_nick_user"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="ta的讨论"
            android:textSize="18sp"
            android:textColor="@color/LightBlack"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@id/iv_add_user"
            android:onClick="addFriend"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:src="@drawable/ic_add_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@id/iv_send_user"
            android:onClick="sendMessage"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:src="@drawable/ic_send_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        style="@style/Divider"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <com.joe.bibi.view.PullUpListView
        android:fastScrollEnabled="false"
        android:scrollbars="none"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/list_comment_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_nocom_user"
        android:text="这个人很懒，没有参与过话题讨论"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
