<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="10dp"
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/iv_avatar_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />
        <TextView
            android:text="悟空"
            android:id="@+id/tv_nick_add"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@id/iv_avatar_add"
            android:layout_toRightOf="@id/iv_avatar_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="请求加您为好友"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_alignLeft="@id/tv_nick_add"
            android:layout_below="@id/tv_nick_add"
            android:layout_alignBottom="@id/iv_avatar_add"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_agree_add"
        android:background="@drawable/selector_button_blue"
        android:text="同意"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="65dp"
        android:layout_height="40dp" />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_agreed_add"
        android:gravity="center"
        android:text="已同意"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="65dp"
        android:layout_height="40dp" />
    </RelativeLayout>
